  <Register Location="/VideoPlayers/MimeTypeRegistrations">
    <VideoPlayerMimeTypeMapping Id="MediaSite" ClassName="MediasitePlugin.ResourceProvider.MediaSitePlayer" MimeType="video/mediasite"/>
