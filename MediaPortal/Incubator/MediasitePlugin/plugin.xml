  </Register>
  <Register Location="/Resources/Skin">
    <Resource Id="Mediasite" Directory="Skin" Type="Skin"/>
  </Register>

  <Register Location="/Resources/Language">
    <Resource Id="MediasiteLanguage" Directory="Language" Type="Language"/>
  </Register>
</Plugin>
